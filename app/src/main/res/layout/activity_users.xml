<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".features.report.ReportActivity"
        tools:ignore="MergeRootFrame">

        <LinearLayout
            android:id="@+id/main_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        </LinearLayout>


        <com.sa90.materialarcmenu.ArcMenu
            android:id="@+id/fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:menu_open="arc_left"
            app:menu_color="@color/white"
            app:menu_scr="@drawable/ic_face_black_24dp">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="listUsers"
                app:backgroundTint="@color/yellow"
                app:srcCompat="@drawable/ic_perm_contact_calendar_black_36dp" />


            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="newUser"
                app:backgroundTint="@color/light_green"
                app:srcCompat="@drawable/ic_add_to_queue_black_36dp" />

        </com.sa90.materialarcmenu.ArcMenu>


    </android.support.design.widget.CoordinatorLayout>

</layout>